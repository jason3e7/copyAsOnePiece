{
  "name": "Copy as OnePiece",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "manifest_version": 2,
  "description": "Copy Link as OnePiece(Markdown code)",
  "permissions": [
    "tabs",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_icon": "./images/icon-128.png",
    "default_title": "Copy as OnePiece...",
    "default_popup": "./ui/popup.html",
    "browser_style": true
  },
  "icons": {
    "16": "./images/icon-16.png",
    "48": "./images/icon-48.png",
    "128": "./images/icon-128.png"
  },
  "background": {
    "page": "./background.html",
    "persistent": true
  },
  "commands": {
    "current-tab-link-as-list": {
      "description": "current tab: * [title](url)",
      "suggested_key": {
        "default": "Ctrl+D"
      }
    },
    "current-tab-link-as-one-piece": {
      "description": "current tab: + [title](url)",
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      }
    }
  }
}
