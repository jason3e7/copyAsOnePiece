{
  "name": "Copy as OnePiece",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "manifest_version": 2,
  "description": "Copy Link as OnePiece(Markdown code)",
  "permissions": [
    "tabs",
    "contextMenus",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_icon": "./images/icon-128.png",
    "default_title": "Copy as OnePiece...",
    "default_popup": "./ui/popup.html",
    "browser_style": true
  },
  "icons": {
    "16": "./images/icon-16.png",
    "48": "./images/icon-48.png",
    "128": "./images/icon-128.png"
  },
  "background": {
    "page": "./background.html",
    "persistent": true
  },
  "commands": {
    "current-tab-link": {
      "description": "current tab: [title](url)"
    },
    "all-tabs-link-as-list": {
      "description": "all tabs: * [title](url)"
    },
    "all-tabs-title-as-list": {
      "description": "all tabs: * title"
    },
    "all-tabs-url-as-list": {
      "description": "all tabs: * url"
    }
  }
}
